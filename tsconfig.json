{
  "compilerOptions": {
      "target": "es5",
      "lib": [
          "dom",
          "dom.iterable",
          "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true, // por default = false, mas Ã© legal deixar como true para ele reclamar mais
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve"
  },
  "include": [
      "**/*.ts",
      "**/*.tsx"
  ],
  "exclude": [
      "node_modules"
  ]
}
